# Required
DDF_BASE_URL=https://ddfapi-docs.realtor.ca/your-api-base/
DDF_AUTH_URL=https://ddfapi-docs.realtor.ca/your-auth-url/

# Auth mode: "password" (Resource Owner) or "client_credentials"
DDF_TOKEN_GRANT=client_credentials

# If your token endpoint expects Basic auth for client_id/client_secret, leave as-is.
# Otherwise set DDF_AUTH_USE_BASIC=false and the credentials will be sent in the form body.
DDF_AUTH_USE_BASIC=true
DDF_CLIENT_ID=your-client-id
DDF_CLIENT_SECRET=your-client-secret
DDF_SCOPE=optional-scope

# If using password grant
DDF_USERNAME=
DDF_PASSWORD=

# Optional: tune defaults
DDF_DEFAULT_TOP=25
DDF_MAX_TOP=200

# Optional: if keys are numeric for your DDF deployment
DDF_PROPERTY_KEY_STYLE=quoted   # "quoted" or "unquoted"

# Optional: HTTP hardening
DDF_HTTP_TIMEOUT_MS=30000
DDF_HTTP_RETRIES=2
DDF_HTTP_CONCURRENCY=6
DDF_HTTP_RPS=8
DDF_HTTP_BURST=16
DDF_USER_AGENT=crea-ddf-mcp/0.2.0

# Optional: media endpoint configuration (deployment-dependent)
DDF_MEDIA_ENTITY=Media
DDF_MEDIA_RECORD_KEY_FIELD=ResourceRecordKey
DDF_MEDIA_ORDER_FIELD=Order

# Logging
LOG_LEVEL=info         # debug|info|warn|error
LOG_TOOL_ARGS=false
